{
  "scopeName": "source.three-musketeers",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#literals" },
    { "include": "#comments" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.expr",
          "match": "\\b(return|if|else)\\b"
        },
        {
          "name": "keyword.other.expr",
          "match": "\\b(printf|scanf|gets|puts|type)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.expr",
          "match": "\\b(int|double|float|bool|string)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.expr",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "string.quoted.double.expr",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.expr",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "constant.language.boolean.expr",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.expr",
          "match": "//.*$"
        },
        {
          "name": "comment.block.expr",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.expr",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
